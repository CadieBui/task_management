<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="pagecurrent:ml-0 text-xs font-semibold flex w-8 h-8 mx-1 p-0 rounded-full items-center justify-center leading-tight relative border border-solid border-pink-500 bg-pink-500 text-white hover:bg-pink-300 hover:text-white" >
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel} %>
  </span>
<% else %>
  <span class="page:ml-0 text-xs font-semibold flex w-8 h-8 mx-1 p-0 rounded-full items-center justify-center leading-tight relative border border-solid border-pink-500 bg-white text-pink-500 hover:bg-pink-300 hover:text-white" >
    <%= link_to_unless page.current?, page, url, {remote: remote, rel: page.rel} %>
  </span>
<% end %>
