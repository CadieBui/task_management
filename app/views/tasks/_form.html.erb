<div class="border border-pink-500 rounded-md shadow-md divide-y divide-dotted w-600">

  <%= form_with(model: task) do |form|%>
    <% if task.errors.any? %>
      <div class="text-pink-500 px-6 py-4 border-2 rounded relative mb-4 border-pink-500 w-full">
        <h2>
          <%= pluralize(task.errors.count, "error")%><%= t('forms.error_sentence')%>
        </h2>

        <ul>
          <% task.errors.full_messages.each do |error| %> 
            <li><%= error %></li> 
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class=" px-2 py-1 my-2">
      <%= form.label :title, t('forms.field_label.title')%>
      <%= form.text_field :title , class:"my-2 caret-purple-200 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full"%>
    </div>
    
    <div class=" px-2 py-1 my-2">
      <%= form.label :content, t('forms.field_label.content'), style: "display: block" %>
      <%= form.text_area :content, class:"my-2 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full" %>
    </div>
    <div class=" px-2 py-1 my-2">
      <%= form.label :status, t('forms.field_label.status'), style: "display: block" %>
      <%= form.select :status, Task.i18n_stages, { class: "form-control" } , class:"my-2 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full" %> 
    </div>

    <div class=" px-2 py-1 my-2">
      <%= form.label :priority, t('forms.field_label.priority'), style: "display: block" %>
      <%= form.select :priority, Task.i18n_prior, { class: "form-control" } , class:"my-2 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full" %> 
    </div>

    <div class=" px-2 py-1 my-2">
      <%= form.label :tag_ids, "標籤", style: "display: block" %>
      <%= form.collection_select :tag_ids, Tag.all, :id, :tagname , { class: "form-control" } , class:"my-2 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full", multiple: true %> 
    </div>

    <div class=" px-2 py-1 my-2">
      <%= form.label :endtime, t('forms.field_label.endtime'), style: "display: block" %>
      <%= form.date_field :endtime, class:"my-2 px-2 py-1 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full" %>
    </div>

    <div class=" px-2 py-1 my-2">
      <%= form.submit t('forms.button.submit'), class:"w-full text-center bg-red-500 text-white active:bg-red-600 font-bold uppercase text-xs px-4 py-2 rounded-full shadow hover:shadow-md outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"  %>
    </div>
  <% end %>
</div>

