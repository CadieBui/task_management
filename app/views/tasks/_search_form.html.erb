<%= search_form_for @q do |f| %>
  <div class="grid gap-y-4 justify-items-start">
    <div class="grid gap-y-2.5 ">
      <%= f.label :title_cont , t('forms.search.title') %>
      <%= f.search_field :title_cont, {class:"caret-purple-200 px-2 py-1 w-300 placeholder-slate-300  text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring "}%>
    </div>  
    <div class="grid gap-y-2.5 ">
      <%= f.label :status_eq , t('forms.search.status') %>
      <%= f.select :status_eq, options_for_select(Task.i18n_stages),{include_blank: t('forms.enum.status_enum.all_status')}, {class:"px-2 py-1 w-300 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring"}%> 
    </div>  
    <div class="grid gap-y-2.5">
      <%= f.label :priority_eq , t('forms.search.priority') %>
      <%= f.select :priority_eq, options_for_select(Task.i18n_prior),{include_blank: t('forms.enum.priority_enum.all_priority')}, {class:"px-2 py-1 w-300 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring "}%> 
    </div>  

    <div class="grid gap-y-2.5">
      <%= f.label :tags_id_eq , t('form.search.tag') %>
      <%= f.select :tags_id_eq, options_from_collection_for_select(Tag.all, :id, :tagname, @q.tags_id_eq),{include_blank: t('forms.enum.priority_enum.all_priority')}, {class:"px-2 py-1 w-300 placeholder-slate-300 text-slate-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring "}%> 
    </div>  
    
    <%= f.submit name: "Search" , class:"bg-pink-500 text-white active:bg-pink-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" %>
  </div>  
<% end %>